    41                                      ; Perform a series of very basic addition operations to demonstarate 
    42                                      ; a basic program format 
    43                                      ; byte exampe 
    44                                  
    45                                      ; bResult = bVar1 + bvar2;
    46 00000000 8A0425[00000000]            mov al , byte[bVar1];
    47 00000007 020425[01000000]            add al, byte[bVar2];
    48 0000000E 880425[02000000]            mov byte[bResult] , al ; move the result of the addtion to bResult 
    49                                  
    50                                      ; Word example 
    51 00000015 668B0425[03000000]          mov ax , word[wVar1]; mov wVar1 to ax 
    52 0000001D 66030425[05000000]          add ax , word[wvar2]; add al + wVar2
    53 00000025 66890425[07000000]          mov word[wResult], ax ; mov result to wResult 
    54                                  
    55                                      ; Double word example 
    56                                  
    57 0000002D 8B0425[09000000]            mov eax , dword[dVar1]; move dVar1 to eax 
    58 00000034 030425[0D000000]            add eax , dword[dVar2]; add eax + dVar2
    59 0000003B 890425[11000000]            mov dword[dResult], eax ; mov result to dResult 
